<Page
    x:Class="MyActivities.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyActivities"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:ConnectionId='1' Icon="Previous" Label="Previous" x:Name="abbPrevious"                            />
            <AppBarButton x:ConnectionId='2' Icon="Next" Label="Next" x:Name="abbNext"                        />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="5" Orientation="Horizontal">
            <Button x:ConnectionId='3' x:Name="btnCreate" Content="Create" Margin="20 0 0 0"                          ></Button>
            <Button x:ConnectionId='4' x:Name="btnView" Content="View" Margin="100 0 0 0"                        ></Button>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBlock x:Name="tbkDate" Style="{StaticResource BodyTextBlockStyle}" FontSize="24" Margin="20 0 0 0"></TextBlock>
            <TextBlock x:Name="tbkCount" Style="{StaticResource BodyTextBlockStyle}" FontSize="24" Margin="100 0 0 0"></TextBlock>
        </StackPanel>
        <ListView Grid.Row="2" x:Name="lsvDisplay">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Bisque" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="tbkMode" Text="{Binding Mode}" Style="{StaticResource BodyTextBlockStyle}" FontSize="24"></TextBlock>
                            <TextBlock x:Name="tbkDateTime" Text="{Binding Datetime}" Margin="5 0 0 0" Style="{StaticResource BodyTextBlockStyle}" FontSize="24"></TextBlock>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Page>

