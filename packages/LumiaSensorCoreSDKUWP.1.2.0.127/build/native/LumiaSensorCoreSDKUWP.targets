<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<Target Name="CheckAnyCPU" Condition="('$(Platform)' != 'ARM') AND ('$(Platform)' != 'x86') AND ('$(Platform)' != 'x64')" BeforeTargets="BeforeBuild">
		<Error Text="Lumia Sense SDK does not support the $(Platform) target platform. Please consult http://developer.nokia.com/Resources/Library/Lumia/#!lumia-sense-sdk/adding-libraries-to-the-project.html;#toc_InstallingtheSDKandincludingthelibrariestoaprojectusingNuGet " />
	</Target>

	<ItemGroup Condition="('$(TargetPlatformIdentifier)' == 'UAP') And ('$(MSBuildProjectExtension)' != '.csproj')">
		<Reference Include="$(MSBuildThisFileDirectory)..\..\lib\uap10.0\Lumia.Sense.winmd">
			<HintPath>$(MSBuildThisFileDirectory)..\..\lib\uap10.0\Lumia.Sense.winmd</HintPath>	
			<Implementation>Lumia.Sense.dll</Implementation>
			<IsWinMDFile>true</IsWinMDFile>
		</Reference>
		<ReferenceCopyLocalPaths Include="$(MSBuildThisFileDirectory)..\..\runtimes\win10-$(Platform)\native\Lumia.Sense.dll" />
	</ItemGroup>
	
	<ItemGroup Condition="('$(TargetPlatformIdentifier)' == 'UAP') And ('$(MSBuildProjectExtension)' != '.csproj')">
		<Reference Include="$(MSBuildThisFileDirectory)..\..\lib\uap10.0\Lumia.Internal.HMBClient.winmd">
			<Implementation>Lumia.Internal.HMBClient.dll</Implementation>
			<HintPath>$(MSBuildThisFileDirectory)..\..\lib\uap10.0\Lumia.Internal.HMBClient.winmd</HintPath>	
			<IsWinMDFile>true</IsWinMDFile>
		</Reference>
		<ReferenceCopyLocalPaths Include="$(MSBuildThisFileDirectory)..\..\runtimes\win10-$(Platform)\native\Lumia.Internal.HMBClient.dll" />
	</ItemGroup>
	
	<ItemGroup Condition="('$(TargetPlatformIdentifier)' != 'UAP')">
		<Reference Include="Lumia.Sense">
			<HintPath>$(MSBuildThisFileDirectory)\..\..\lib\portable-wpa81+wp81\$(Platform)\Lumia.Sense.winmd</HintPath>	
			<IsWinMDFile>true</IsWinMDFile>
		</Reference>
	</ItemGroup>
	
	<ItemGroup Condition="('$(TargetPlatformIdentifier)' != 'UAP')">
		<Reference Include="Lumia.Internal.HMBClient">
			<HintPath>$(MSBuildThisFileDirectory)\..\..\lib\portable-wpa81+wp81\$(Platform)\Lumia.Internal.HMBClient.winmd</HintPath>	
			<IsWinMDFile>true</IsWinMDFile>
		</Reference>
	</ItemGroup>
</Project>
