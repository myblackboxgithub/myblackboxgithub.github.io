<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<Target Name="CheckAnyCPU" Condition="('$(Platform)' != 'ARM') AND ('$(Platform)' != 'x86') AND ('$(Platform)' != 'x64')" BeforeTargets="BeforeBuild">
		<Error Text="Lumia SensorCore SDK Testing Tools do not support the $(Platform) target platform." />
	</Target>

	<ItemGroup Condition="('$(TargetPlatformIdentifier)' == 'UAP') And ('$(MSBuildProjectExtension)' != '.csproj')">
		<Reference Include="$(MSBuildThisFileDirectory)..\..\lib\uap10.0\Lumia.Sense.Testing.winmd">
			<HintPath>$(MSBuildThisFileDirectory)..\..\lib\uap10.0\Lumia.Sense.Testing.winmd</HintPath>	
			<Implementation>Lumia.Sense.Testing.dll</Implementation>
			<IsWinMDFile>true</IsWinMDFile>
		</Reference>
		<ReferenceCopyLocalPaths Include="$(MSBuildThisFileDirectory)..\..\runtimes\win10-$(Platform)\native\Lumia.Sense.Testing.dll" />
	</ItemGroup>
	
	<ItemGroup Condition="('$(TargetPlatformIdentifier)' != 'UAP')">
		<Reference Include="Lumia.Sense.Testing">
			<HintPath>$(MSBuildThisFileDirectory)..\..\lib\portable-wpa81+wp81\$(Platform)\Lumia.Sense.Testing.winmd</HintPath>	
			<IsWinMDFile>true</IsWinMDFile>
		</Reference>
	</ItemGroup>
</Project>
